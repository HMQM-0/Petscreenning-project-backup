{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@styles": ["./styles/index.ts"],
      "@components": ["./components/index.ts"],
      "@apollo-client": ["apollo-client.ts"],
      "@generated": ["./graphql/generated.ts"],
      "@locale-json/*": ["./config/locale/*"],
      "@locale": ["./components/providers/Locale/index.ts"],
      "@providers": ["./components/providers/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
