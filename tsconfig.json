{
  "include": ["next-env.d.ts", "alert.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@generated": ["./graphql/generated.ts"],
      "@locale-json/*": ["./src/config/locale/*"],
      "@locale": ["./src/components/providers/Locale/index.ts"],
      "@providers": ["./src/components/providers/index.ts"],
      "@layouts/*": ["./src/components/layouts/*"],
      "nautical-api": ["./src/components/providers/Nautical/index.ts"]
    }
  }
}
